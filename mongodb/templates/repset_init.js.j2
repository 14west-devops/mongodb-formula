{% set MONGO_ADMIN_PASSWORD = salt.pillar.get("mongodb:admin_password") %}

conn = new Mongo("localhost:{{ mongodb.port }}");
db = conn.getDB("admin");
db.auth( '{{ MONGO_ADMIN_USER }}', '{{ MONGO_ADMIN_PASSWORD }}');

rs.slaveOk()

// Check that the cluster is ok
if(!rs.status().ok) { throw 'Mongo Cluster Not Ok';}

if(rs.isMaster().ismaster) {
    // Now add super user to cluster
    conn = new Mongo("localhost:{{ mongodb.port }}");
    db = conn.getDB("admin");
    db.auth( '{{ MONGO_ADMIN_USER }}', '{{ MONGO_ADMIN_PASSWORD }}');

    if(db.getUser("{{ MONGO_ADMIN_USER }}") == null) {
        db.addUser(
            {
                "user": "{{ MONGO_ADMIN_USER }}",
                "pwd": "{{ MONGO_ADMIN_PASSWORD }}",
                "roles": ['root', 'dbAdminAnyDatabase', 'clusterAdmin']
            }
        );
    } else {
        db.system.users.update(
            {"{{ MONGO_ADMIN_USER }}" : "{{ MONGO_ADMIN_PASSWORD }}"},
            {$addToSet: {'roles': ['root', 'dbAdminAnyDatabase', 'clusterAdmin']}}
        );
